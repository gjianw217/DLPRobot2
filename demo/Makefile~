all:drivers network robot devices client
drivers:
	$(MAKE) -C drivers
modbus:
	$(MAKE) -C modbus
robot:
	$(MAKE) -C robot
devices:
	$(MAKE) -C devices
client:
	$(MAKE) -C client
.PHONY:all drivers network robot devices client
